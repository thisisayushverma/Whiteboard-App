<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bgfordialog"
    android:paddingTop="50dp"
    android:paddingBottom="40dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Project Title"
        android:textColor="@color/triclr"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/projectinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bgforplaintxt"
        android:ems="10"
        android:hint="Project Name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="7dp"
        android:paddingStart="15dp"
        android:textColor="@color/triclr"
        android:textColorHint="@color/frthclr"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck" />

    <Button
        android:id="@+id/submitbtn"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/secclr"
        android:text="CREATE"
        android:textColor="@color/triclr"
        app:layout_constraintEnd_toEndOf="@+id/projectinput"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/projectinput"
        app:layout_constraintTop_toBottomOf="@+id/projectinput"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/cancelbtn"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/secclr"
        android:text="CANCEL"
        android:textColor="@color/triclr"
        app:layout_constraintEnd_toEndOf="@+id/projectinput"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/projectinput"
        app:layout_constraintTop_toBottomOf="@+id/projectinput"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>